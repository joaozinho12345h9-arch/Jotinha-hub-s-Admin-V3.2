-- Processador de Comandos (Ouvinte)
local function Process(msg)
    local d = msg:split(":")
    if d[1] == "/e SYNC" and d[2] == LocalPlayer.Name then
        local cmd, sender = d[3], Players:FindFirstChild(d[4])
        local char = LocalPlayer.Character
        local root = char and char:FindFirstChild("HumanoidRootPart")
        if not root then return end

        if cmd == "kill" then char:BreakJoints()
        elseif cmd == "kick" then LocalPlayer:Kick("Admin Sync")
        elseif cmd == "spin" then
            local bv = Instance.new("BodyAngularVelocity", root)
            bv.AngularVelocity = Vector3.new(0,50,0); bv.MaxTorque = Vector3.new(0,math.huge,0)
            task.wait(5); bv:Destroy()
        elseif cmd == "explode" then Instance.new("Explosion", workspace).Position = root.Position
        elseif cmd == "bring" and sender then root.CFrame = sender.Character.HumanoidRootPart.CFrame
        elseif cmd:find("js") then
            local s = Instance.new("Sound", workspace)
            s.SoundId = "rbxassetid://"..(cmd=="js1" and "5567526010" or "142296708")
            s:Play()
        end
    end
end

