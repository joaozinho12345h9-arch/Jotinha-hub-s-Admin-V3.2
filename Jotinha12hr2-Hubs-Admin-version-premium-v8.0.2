-- [FUNÇÃO DE TAG RGB]
local function _0xApplyTag(_u)
    if not _u or not _u.Character then return end
    local _h = _u.Character:WaitForChild("Head", 10)
    if _h and not _h:FindFirstChild("JTag") then
        local _g = Instance.new("BillboardGui", _h)
        _g.Name = "JTag" _g.Size = UDim2.new(0, 200, 0, 50) _g.AlwaysOnTop = true _g.ExtentsOffset = Vector3.new(0, 3, 0)
        local _t = Instance.new("TextLabel", _g)
        _t.Size = UDim2.new(1, 0, 1, 0) _t.BackgroundTransparency = 1 _t.Font = Enum.Font.LuckiestGuy _t.TextSize = 25 _t.TextStrokeTransparency = 0
        
        if _u.Name == "jotinha12hr2" then _t.Text = "[DONO] " .. _u.DisplayName
        elseif _u.Name == "amiguinhodoheito" then _t.Text = "[SUB-DONO] " .. _u.DisplayName
        else _t.Text = "[Jotinha Hub User]" end

        game:GetService("RunService").RenderStepped:Connect(function()
            if _t then _t.TextColor3 = Color3.fromHSV(tick() % 5 / 5, 0.8, 1) end
        end)
    end
end

